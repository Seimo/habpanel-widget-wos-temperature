{
    "author": "Christoph Schaefer",
    "name": "Temperatur",
    "settings": [
        {
            "type": "string",
            "default": "Temperatur",
            "label": "Überschrift",
            "id": "top_label"
        },
        {
            "type": "string",
            "id": "temp_label",
            "label": "Temperatur",
            "default": "Temperatur"
        },
        {
            "type": "item",
            "id": "temp_item",
            "label": "Temperatur Item"
        },
        {
            "type": "string",
            "id": "humidity_label",
            "label": "Humidity",
            "default": "Feuchtigkeit"
        },
        {
            "type": "item",
            "id": "humidity_item",
            "label": "Humidity Item"
        },
        {
            "type": "string",
            "id": "pressure_label",
            "default": "Luftdruck",
            "label": "Pressure Label"
        },
        {
            "type": "item",
            "id": "pressure_item",
            "label": "Pressure Item"
        }
    ],
    "template": "<div class=\"row\" ng-if=\"(config.top_label)\">\n\t<div class=\"cols-xs-12\"><h2>{{config.top_label}}</h2></div>\n</div>\n\n<div class=\"row\" ng-if=\"(config.temp_item)\">\n  <div class=\"col-xs-3\"><span><widget-icon iconset=\"'smarthome-set'\" icon=\"'temperature'\" />{{config.temp_label}}</span></div>\n  <div class=\"col-xs-9\"><span style=\"color: red; font-size: 28pt\">{{itemValue(config.temp_item) | number:'.2-2'}} °C</span></div>\n</div>\n\n<div class=\"row\" ng-if=\"(config.humidity_item)\">\n  <div class=\"col-xs-3\"><span><widget-icon iconset=\"'smarthome-set'\" icon=\"'drop'\" />{{config.humidity_label}}</span></div>\n  <div class=\"col-xs-9\"><span style=\"color: cyan; font-size: 28pt\">{{itemValue(config.humidity_item) | number:'.2-2'}} %</span></div>\n</div>\n\n<div class=\"row\" ng-if=\"(config.pressure_item)\">\n  <div class=\"col-xs-3\"><span><widget-icon iconset=\"'smarthome-set'\" icon=\"'thermostat'\" />{{config.pressure_label}}</span></div>\n  <div class=\"col-xs-9\"><span style=\"color: green; font-size: 28pt\">{{'%.02f' | sprintf:itemValue(config.pressure_item) | number:'.2-2'}} <small style=\"font-size:8pt\">Pa</small></span></div>\n</div>",
    "description": "Visualisierung von Sensordaten"
}